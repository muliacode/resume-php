{
    "name": "muliacode/resume-php",
    "description": "A lightweight PHP package for creating and exporting resume profiles to standardized formats like JSON-Resume, Europass, and HR-XML",
    "keywords": [
        "muliacode",
        "resume-php"
    ],
    "homepage": "https://github.com/muliacode/resume-php",
    "license": "MIT",
    "authors": [
        {
            "name": "Noah Scharrenberg",
            "email": "nscharrenberg@hotmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.3"
    },
    "require-dev": {
        "pestphp/pest": "^3.0",
        "laravel/pint": "^1.0",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "Muliacode\\Resume\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Muliacode\\Resume\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
            "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
